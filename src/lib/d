const UpdatePhoneSize = async () => {
	if (window.innerWidth < 1200) {
		PhoneModel.scale.set(window.innerWidth / 800, window.innerWidth / 800);
		PhoneModel.rotation.set(0, 4, 0);
		OrbitalControls.rotateSpeed = 0;
		OrbitalControls.reset();
	} else {
		PhoneModel.scale.set(1.3, 1.3);
		PhoneModel.rotation.set(-0.3, 2.9, 0);
		OrbitalControls.rotateSpeed = 0.1;
	}
}
// Window Resize Listener
window.addEventListener('resize', async () => await UpdatePhoneSize());